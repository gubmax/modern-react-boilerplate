{
  "name": "modern-react-boilerplate",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=14.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gubmax/modern-react-boilerplate.git"
  },
  "author": "Maksim Gubyshev <gubyshev@gmail.com> (https://github.com/gubmax)",
  "scripts": {
    "dev": "ts-node server/main",
    "debug": "ts-node --inspect-brk server/main",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr server/entry --outDir dist/server",
    "serve": "cross-env NODE_ENV=production ts-node server/main",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky install"
  },
  "dependencies": {
    "@emotion/react": "^11.4.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "node-fetch": "^2.6.1",
    "npm": "^7.19.0",
    "react": "18.0.0-alpha-73ffce1b6-20210624",
    "react-dom": "18.0.0-alpha-73ffce1b6-20210624",
    "serve-static": "^1.14.1"
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "^11.2.0",
    "@types/compression": "^1.7.0",
    "@types/node": "^15.12.4",
    "@types/node-fetch": "^2.5.10",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/serve-static": "^1.13.9",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "@vitejs/plugin-react-refresh": "^1.3.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.29.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4",
    "vite": "^2.3.8"
  }
}
