{
  "name": "modern-react-boilerplate",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=14.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gubmax/modern-react-boilerplate.git"
  },
  "author": "Maksim Gubyshev <gubyshev@gmail.com> (https://github.com/gubmax)",
  "scripts": {
    "dev": "ts-node server/main",
    "debug": "ts-node --inspect-brk server/main",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr server/render --outDir dist/server",
    "serve": "cross-env NODE_ENV=production ts-node server/main",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky install"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.1.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "history": "^5.0.0",
    "node-fetch": "^2.6.1",
    "react": "18.0.0-alpha-73ffce1b6-20210624",
    "react-dom": "18.0.0-alpha-73ffce1b6-20210624",
    "react-router": "^6.0.0-beta.0",
    "react-router-dom": "^6.0.0-beta.0",
    "serve-static": "^1.14.1",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.1",
    "@types/node": "^16.3.1",
    "@types/node-fetch": "^2.5.11",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/serve-static": "^1.13.10",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "@vanilla-extract/vite-plugin": "^1.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.5",
    "cross-env": "^7.0.3",
    "eslint": "^7.30.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "vite": "^2.4.1"
  }
}
