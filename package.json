{
  "name": "modern-react-boilerplate",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/gubmax/modern-react-boilerplate.git"
  },
  "author": "Maksim Gubyshev <gubyshev@gmail.com> (https://github.com/gubmax)",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "packages/client",
    "packages/server"
  ],
  "scripts": {
    "dev": "cd packages/server && npm run dev",
    "debug": "cd packages/server && npm run debug",
    "build": "npm run build:client && npm run build:server && npm run prerender",
    "build:client": "cd packages/client && npm run build:client",
    "build:server": "cd packages/client && npm run build:server",
    "prerender": "cd packages/server && npm run prerender",
    "serve": "cd packages/server && npm run serve",
    "typecheck": "(cd packages/client && tsc --noEmit) & (cd packages/server && tsc --noEmit)",
    "lint": "eslint packages --ext .ts,.tsx",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "18.0.0-rc.0-next-3b3daf557-20211210",
    "react-dom": "18.0.0-rc.0-next-3b3daf557-20211210"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "cross-env": "7.0.3",
    "eslint": "8.2.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.27.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "husky": "7.0.4",
    "lint-staged": "12.0.3",
    "prettier": "2.4.1",
    "typescript": "4.4.4"
  }
}
