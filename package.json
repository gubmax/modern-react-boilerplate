{
  "name": "modern-react-boilerplate",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/gubmax/modern-react-boilerplate.git"
  },
  "author": "Maksim Gubyshev <gubyshev@gmail.com> (https://github.com/gubmax)",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:preact": "tsc && vite build --mode preact",
    "serve": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.0.0",
    "preact": "^10.5.13",
    "react": "^18.0.0-alpha-568dc3532",
    "react-dom": "^18.0.0-alpha-568dc3532"
  },
  "devDependencies": {
    "@types/node": "^15.12.4",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "@vanilla-extract/vite-plugin": "^1.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.3",
    "eslint": "^7.29.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "typescript": "^4.3.4",
    "vite": "^2.3.8"
  },
  "lint-staged": {
    "(src|server)/**/*.{ts,tsx}": "npm run lint -- --fix"
  }
}
