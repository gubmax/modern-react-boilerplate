{
  "name": "@modern-react-boilerplate/server",
  "repository": {
    "type": "git",
    "url": "https://github.com/gubmax/modern-react-boilerplate.git",
    "directory": "packages/server"
  },
  "scripts": {
    "build": "node -r esbuild-register scripts/build",
    "prerender": "node -r esbuild-register scripts/prerender",
    "preview": "cross-env NODE_ENV=production PATHS=local node -r esbuild-register src/main",
    "dev": "node -r esbuild-register scripts/watch",
    "debug": "node -r esbuild-register --inspect-brk src/main"
  },
  "dependencies": {
    "@nestjs/common": "8.2.6",
    "@nestjs/config": "1.1.7",
    "@nestjs/core": "8.2.6",
    "@nestjs/platform-express": "8.2.6",
    "compression": "1.7.4",
    "esbuild-register": "3.3.2",
    "pino": "7.3.0",
    "reflect-metadata": "0.1.13",
    "serve-static": "1.14.2",
    "undici": "4.12.1"
  },
  "devDependencies": {
    "@parcel/watcher": "2.0.5",
    "@types/compression": "1.7.2",
    "@types/node": "17.0.8",
    "@types/pino": "7.0.5",
    "@types/react": "17.0.38",
    "@types/serve-static": "1.13.10",
    "chalk": "4.1.2"
  },
  "peerDependencies": {
    "react-router": "*",
    "typescript": "*",
    "react-router-dom": "*"
  }
}
